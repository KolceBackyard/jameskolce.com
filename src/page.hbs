{{!< default}}

{{#post}}
  <header>
    {{#if feature_image}}
      <img src="{{img_url}}">
    {{/if}}

    <nav>
      {{#if @blog.logo}}
        <a href="{{@blog.url}}">
          <img src="{{@blog.logo}}" alt="{{@blog.title}}">
        </a>
      {{/if}}
    </nav>
  </header>

  <main class="{{post_class}}" role="main">
    <header>
      <h1>{{title}}</h1>
    </header>

    <section>
      {{content}}
    </section>
  </main>
{{/post}}
