.post-meta {
  margin-top: 1lh ?if media (--breakpoint);
  font-size: 1;
  font-weight: bold;

  .tags {
    a {
      letter-spacing: --tracking;
      text-transform: lowercase;
      font-family: --font-smallcaps;
    }
  }

  .date {
    display: block;
    display: inline ?if media (--breakpoint);
    margin-top: 0;
  }
}
