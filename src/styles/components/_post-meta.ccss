.post-meta {
  margin-top: 0.5lh;
  font-size: 1;

  .tags {
    font-weight: bold;

    a {
      letter-spacing: --tracking;
      text-transform: lowercase;
      font-family: --font-smallcaps;
    }
  }

  .date {
    display: block;
    display: inline ?if media (--breakpoint);
    margin-top: 0;
  }
}
