.post-header {
  margin-top: --spacing-l;
  margin-bottom: --spacing-l;
  text-align: center;

  .-excerpt > & {
    margin-bottom: --spacing-s;
    text-align: left;
    margin-top: --spacing-m;

    .heading {
      font-size: 5;
      margin: 0;
    }
  }

  .heading {
    font-size: 8;
    font-size: 10 ?if media (--breakpoint);
  }

  .description {
    margin-top: --spacing-xs;
    font-family: --font-ui;
  }
}
