.main-header {
  text-align: center;
  margin: --spacing-l 0;

  &.-home {
    margin: --spacing-xl 0;

    .logo {
      font-size: 14;
      font-size: 16 ?if media (--breakpoint);
      font-family: --font-secondary;
      font-weight: normal;
    }
  }

  .logo {
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-size: 2;
    font-family: --font-smallcaps;
    color: --color-text-primary;
  }

  a.logo:hover,
  a.logo:focus {
    color: --color-base-primary;
  }
}
