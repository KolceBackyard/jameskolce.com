{{!< default}}

<nav class="main-header">
  <a href="{{@blog.url}}" class="logo">{{@blog.title}}</a>
</nav>

{{#post}}
  <article class="{{post_class}}">
    <header class="post-header">
      <h1 class="heading">{{title}}</h1>

      <section class="post-meta">
        <span class="tags">{{tags suffix=" Â· "}}</span>
        <time class="date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
      </section>
    </header>

    <section class="post-content hyphenate" grid>
      <div column="8 +2">
        {{content}}
      </div>
    </section>

  </article>
{{/post}}
